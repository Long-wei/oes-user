<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oes.mapper.UserMapper">

    <select id="selectLoginDtoByUsername" resultType="com.oes.entity.dto.LoginDto">
        select id, username, password, status, avatar, real_name from user where username = #{username}
    </select>

    <select id="selectUserById" resultType="com.oes.entity.po.User">
        select * from user where id = #{id}
    </select>

    <update id="updateUser">
        update user
        <set>

        </set>
    </update>

</mapper>